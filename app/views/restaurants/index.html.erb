<h1 class="my-4">My restaurants 🍕🍔</h1>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
  <% @restaurants.each do |restaurant| %>
    <div class="col">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none text-primary" %>
          </h5>
          <p class="card-text"><%= restaurant.address %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
