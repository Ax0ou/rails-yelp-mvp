<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body">
          <h2 class="card-title mb-4">Add a new restaurant</h2>

          <%= simple_form_for @restaurant do |f| %>
            <div class="mb-3">
              <%= f.input :name, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
            </div>

            <div class="mb-3">
              <%= f.input :address, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
            </div>

            <div class="mb-3">
              <%= f.input :category, collection: Restaurant::CATEGORY, input_html: { class: "form-select" }, label_html: { class: "form-label" } %>
            </div>

            <div class="mb-3">
              <%= f.input :phone_number, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
            </div>

            <%= f.button :submit, "Enregistrer", class: "btn btn-primary w-100" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
